<Window x:Class="SW_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SW_Tool"
        d:DataContext="{d:DesignInstance Type=local:VM}"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Style x:Key="txBox"
               TargetType="TextBox">
            <Setter Property="Height"
                    Value="25" />
        </Style>

        <local:IntToDiceConverter x:Key="int2DiceConverter" />
    </Window.Resources>
    <DockPanel>
        <GroupBox Header="Characters" DockPanel.Dock="Left" Width="200" Margin="10">
        <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
            <Button Name="btnNewChar"
                    Content="New Character"
                    Click="btnNewChar_Click"
                        Margin="0,0,0,5" />
            <ListBox Name="lbChars" Grid.Row="1">

            </ListBox>
            </Grid>
        </GroupBox>
        <Grid DockPanel.Dock="Right" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Header="Description" Margin="10">
                <TextBox Text="{Binding CurrentChar.Description}"
                         Margin="10"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         AcceptsTab="True" />
            </GroupBox>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
        <GroupBox Header="Base Data" Margin="10">
        <Grid Margin="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Label Content="Name:" />
            <TextBox Name="tbName"
                     Grid.Column="1"
                     Text="{Binding CurrentChar.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource txBox}" />

            <Label Content="Type:"
                   Grid.Row="1" />
            <TextBox Name="tbType"
                     Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding CurrentChar.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource txBox}" />
            <Label Content="Species:"
                   Grid.Row="2" />
            <ComboBox Name="cbSpecies"
                      Grid.Row="2"
                      Grid.Column="1"
                      ItemsSource="{Binding Species,UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Name"
                      SelectionChanged="cbSpecies_SelectionChanged">
            </ComboBox>
        </Grid>
        </GroupBox>
            <GroupBox Header="Numbers"
                      Margin="10"
                      Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Attribute Points" />
                    <Label Content="{Binding CurrentChar.Ap, Converter={StaticResource int2DiceConverter}, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Content="Skill Points" />
                    <Label Content="{Binding CurrentChar.Sp, Converter={StaticResource int2DiceConverter}, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox Content="Use Force?"
                              IsChecked="{Binding CurrentChar.Force}"
                              VerticalAlignment="Center" />
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Attributes and Skills"
                      Margin="10"
                      Grid.Row="2">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Content="Dexterity"
                           FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBox x:Name="tbDexAttrib"
                                 Text="{Binding CurrentChar.Dexterity.Value,Converter={StaticResource int2DiceConverter}, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource txBox}"
                                 IsReadOnly="True"
                                 IsUndoEnabled="False" />
                        <Button Name="btnDexAdd"
                                Content="+" Width="15" Height="25"
                                Click="btnDexAdd_Click" />
                        <Button Name="btnDexSub"
                                Content="-"
                                Width="15"
                                Height="25" />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
